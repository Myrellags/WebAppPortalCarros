@model IEnumerable<WebAppPortalCarros.Models.Dono>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary" data-action="Cadastro">
            <span class="glyphicon glyphicon-plus"></span>
            + Novo Dono
        </a>
    </p>
</div>


<div class="container">
    <table class="table display" style="width:100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DonoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DonoID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DonoID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DonoID })
                </td>
            </tr>
        }
    </table>
</div>

